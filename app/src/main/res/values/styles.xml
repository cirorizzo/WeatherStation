<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="itemListLevel00" parent="@android:style/Widget.TextView" >
    	<item name="android:textSize">@dimen/text_size_highlighted_char</item>
    	<item name="android:textColor">@color/gray</item>
    	<item name="android:background">@color/transparent</item>
    	<item name="android:textStyle">bold</item>
	</style>
	
    
    <style name="itemListLevel01" parent="@android:style/Widget.TextView" >
    	<item name="android:textSize">@dimen/text_size_header_list</item>
    	<item name="android:textColor">@color/blue</item>
    	<item name="android:background">@color/transparent</item>
    	<item name="android:textStyle">bold|italic</item>
	</style>
	
    <style name="itemListLevel02Min" parent="@android:style/Widget.TextView" >
    	<item name="android:textSize">@dimen/text_size_item_list</item>
    	<item name="android:textColor">@color/blue</item>
    	<item name="android:background">@color/transparent</item>
    	<item name="android:textStyle">normal</item>
	</style>
	
    <style name="itemListLevel03Max" parent="@android:style/Widget.TextView" >
    	<item name="android:textSize">@dimen/text_size_item_list</item>
    	<item name="android:textColor">@color/red</item>
    	<item name="android:background">@color/transparent</item>
    	<item name="android:textStyle">normal</item>
	</style>    
</resources>
